<div class="mt-4">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">name</th>
      <th scope="col">image</th>
      <th scope="col">description</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{sum @index 1}}</th>
      <td>{{this.name}}</td>    
         <td>{{this.images}}</td>    
            <td>{{this.descrtipstion}}</td>    
            <td>
              <a href="/products/{{this._id}}/edit" class="btn btn-link">edit</a>
            </td>
             <td>
              <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}"  data-target="#delete-product-modal">remove</a>
            </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>

<!-- confirm delete modal -->
<div id="delete-product-modal" class="modal fade"  tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">

        <button type="button" id="btn-delete-product" class="btn btn-danger">save change</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>
<form  name="delette-product-form" method="POST"></form>
<script>
    document.addEventListener('DOMContentLoaded',function(){
        var productID
        var deleteform = document.forms['delette-product-form']
        var btndeleteproducts = document.getElementById('btn-delete-product')


    //when dialog confirm clicked
     $('#delete-product-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        productID = button.data('id')
      })

      btndeleteproducts.onclick = function () {
          deleteform.action = '/products/'+ productID +'?_method=DELETE'
          deleteform.submit()
      }
  })
</script>