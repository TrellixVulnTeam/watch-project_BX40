<div class="mt-4 ">
        <form method="POST" action="/products/{{products._id}}?_method=PUT">
            <div class="form-group">
                <label for="name">name</label>
                <input type="text"  class="form-control" value="{{products.name}}" id="name" name="name">     
            </div>
            <div class="form-group">
                <label for="descrtipstion">descrtipstion</label>
                <input type="text" class="form-control" value="{{products.descrtipstion}}" id="descrtipstion" name="descrtipstion">
            </div>
            <div class="form-group">
                <label for="images">images</label>
                <input type="text" class="form-control" value="{{products.images}}" id="images" name="images">
            </div>
            <div class="form-group">
                <label for="slug">slug</label>
                <input type="text" class="form-control" value="{{products.slug}}" id="slug" name="slug">
            </div>
